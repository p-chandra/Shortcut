#include <stdio.h>
#include <stdlib.h>

void update(int *a,int *b) {
    int temp1 = *a + *b;
    int temp2 = abs((*a) - (*b));
    *a = temp1; *b = temp2;
}

int main() {
    int a, b;
    int *pa = &a, *pb = &b;
    
    scanf("%d %d", &a, &b);
    update(pa, pb);
    printf("%d\n%d", a, b);

    return 0;
}

int *p = &val

& = get memory address
so the pointer is pointing to the memory address of val

int temp;
temp = *p  where *p holds the CONTENTS of the memory of val
